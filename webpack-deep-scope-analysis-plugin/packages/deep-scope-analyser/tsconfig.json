{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2015.core",
      "esnext"
    ],
    "target": "es2015",
    "strict": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "inlineSourceMap": true,
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "$utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "typings/**/*.d.ts",
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ]
}
